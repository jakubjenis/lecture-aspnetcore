@{
    ViewData["Title"] = "Home Page";
}

@model List<mvc.Database.Entities.CryptoCurrency>
<h1>Currencies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var currency in Model)
    {
        <tr>
            <td>@currency.Id</td>
            <td>@currency.Name</td>
            <td width="150">
                <button class="btn btn-sm btn-danger">Remove</button>
                <button class="btn btn-sm btn-primary">Detail</button>
            </td>
        </tr>
    }
</table>