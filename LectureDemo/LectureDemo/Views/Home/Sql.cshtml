@{
    Layout = "_Layout";
}
@model List<LectureDemo.Data.Student>

@if (Model == null || Model.Count == 0)
{
    <p>No data</p>
}
else
{
    <table class="table">
        <thead>
        <th>Meno</th>
        <th>Priezvisko</th>
        <th>Oblubeny predmet</th>
        </thead>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.FavoriteSubject?.Name</td>
            </tr>
        }
    </table>
}